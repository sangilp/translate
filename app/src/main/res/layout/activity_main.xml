<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ducksang.translation.MainActivity">

    <EditText
        android:id="@+id/before_text"
        android:layout_width="350dp"
        android:layout_height="150dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="75dp"
        android:background="#d3f8fd"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/after_text"
        android:layout_width="350dp"
        android:layout_height="150dp"
        android:layout_marginBottom="100dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="#aaf2ff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <ImageButton
        android:id="@+id/translateButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@drawable/trans" />

    <ImageButton
        android:id="@+id/sourceButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dp"
        android:background="@android:color/transparent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:srcCompat="@drawable/id"
        android:layout_marginBottom="14dp"
        app:layout_constraintBottom_toTopOf="@+id/before_text" />

    <ImageButton
        android:id="@+id/targetButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dp"
        android:background="@android:color/transparent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:srcCompat="@drawable/id"
        android:layout_marginBottom="14dp"
        app:layout_constraintBottom_toTopOf="@+id/after_text" />

    <TextView
        android:id="@+id/langOne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:text="TextView"
        app:layout_constraintLeft_toRightOf="@+id/sourceButton"
        android:layout_marginBottom="15dp"
        app:layout_constraintBottom_toTopOf="@+id/before_text" />

    <TextView
        android:id="@+id/langTwo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="40dp"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/after_text"
        app:layout_constraintLeft_toRightOf="@+id/targetButton" />
</android.support.constraint.ConstraintLayout>
